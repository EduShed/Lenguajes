<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp">

<RelativeLayout
    android:layout_margin="4dp"
    android:background="@android:drawable/screen_background_light_transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/RecyclerImg"
        android:background="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:padding="2dp"></ImageView>

    <TextView
        android:id="@+id/txtStudentNameRecycle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/acme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RecyclerImg"
        android:text="line1"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/txtHoraReservaRecycle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/acme"
        android:layout_below="@+id/txtStudentNameRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RecyclerImg"
        android:text="line1"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

</RelativeLayout>

</androidx.cardview.widget.CardView>